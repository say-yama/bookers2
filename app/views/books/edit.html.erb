<div class ="col-sm-12 col-md-8 col-mg-5 px-5 px-sm-0 mx-auto">
  

  <h1>Editing Book</h1>
  
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorsが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
    
    <%= form_with model: @book do |f| %>
    
    
      <label for ="Booktitle">Title</label><br>
       <%= f.text_field :title %><br>
      <label for= "Opinion">Opinion</label><br>
       <%= f.text_area :body %><br>
      <%= f.submit"Update Book",class:"btn btn-sm btn-success" %>
    <% end %>

 
       <%= link_to "Show",book_path(@book.id) %>|
       <%= link_to "Back",books_path %>
</div>