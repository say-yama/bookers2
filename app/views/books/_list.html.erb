 <div class="container">
   <div class="row no-gutters">
    
    <div class = "container>">
      <h2>User info</h2>
       <%= image_tag user.get_profile_image(100,100) %>
       <table class = "table">
        <tbody>
         <tr>
          <th>name</th>
          <th><%= user.name %></th>
         </tr>
         <tr>
          <th>introducton</th>
          <th><%= user.introduction %></th>
         </tr>
       </table>
       
         <div class="row">
           <%= link_to edit_user_path(user.id), class:"btn btn-sm btn-block btn-outline-secondary", method: :get do %>
            <i class="fa-solid fa-user-gear"></i>
           <% end %>
         </div>
        </tbody>
   
    </div>
  </div>
</div>


