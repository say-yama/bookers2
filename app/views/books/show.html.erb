


    <%= render"books/new",book:@book_new,user:@user %>

 
 

     <div class = "col-md-8 offset-md-1">
    
     <h2>Book detail</h2>
      <table class = "table">
       <tbody>
        <tr>
         <td>
          <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
          <p><%= link_to @book.user.name,user_path(@book.user_id) %></p>
         </td>
         <td>
           <p><%= link_to @book.title,book_path(@book.id)%></p>
         </td>
         <td>
           <p><%= @book.body %></p>
         </td>
           <% if @book.user == current_user %>
          <td>
            <%= link_to"Edit",edit_book_path(@book.id),class:"btn btn-sm btn-success" %>
          </td>
          <td>
            <%= link_to"Destroy",destroy_book_path(@book),method: :delete,"data-confirm" =>"本当に消しますか？？",class:"btn btn-sm btn-danger" %>
          </td>
           <% end %>
        </tr>
       </tbody>  
      </table>
    </div>
 
