<div class "d-flex p-2 bd-highlight">
  <div class="d-inline-flex p-2 bd-highlight">
   <div class="col-md-10">
    <%= render"list",user:@user %>
    <%= render"new",book:@book %>
   </div>
   </div>
  <div class="d-inline-flex p-2 bd-highlight">
   <div class ="container">
   
      <h2>Books</h2>
       <table class="table table-hover table-inverse">
         <thead>
          <tr>
           <th></th>
           <th>本のタイトル</th>
           <th>感想</th>
          </tr>
         </thead>
         
         <tbody>
         <% @books.each do |book| %>
          <tr>
           <td><%= image_tag book.user.get_profile_image(100,100) %></td>
           <tb><%= link_to book.title,book_path(book.id) %></tb>
           <tb><%= book.body %></tb>
          </tr>
         <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>
