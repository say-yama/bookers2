    <div class = "col-md-3">
     

           <div id="error_explanation">
           <% if book.errors.any? %>
            <%= book.errors.count %>件のerrorsが発生しました
            <ul>
              <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
     
      <h2>User info</h2>
       <%= image_tag user.get_profile_image(100,100) %>
       
       <table class = "table">
        <tbody>
         <tr>
          <th style="width: 65%">name</th>
          <th style="width: 35%"><%= user.name %></th>
         </tr>
         <tr>
          <th>introducton</th>
          <th><%= user.introduction %></th>
         </tr>
       </table>
        </tbody>
    
        <div class="row">
           <%= link_to edit_user_path(user.id), class:"btn btn-block btn-outline-secondary mt-4", method: :get do %>
            <i class="fas fa-user-cog"></i>
           <% end %>
        </div>
   
          
    
    <div class="mt-4">
 
     
      <h2>New book</h2>
      
       <%= form_with model: book , local: true do |f| %>
         <div class= "form-group">
           <label for ="book[title]">Title</label><br>
            <%= f.text_field :title ,:class => "form-control"%><br>
         </div>
         <div class= "form-group-lg">
           <label for="book[body]">Opinion</label><br>
            <%= f.text_area :body ,:class => "form-control"%><br>
         </div>
         <div class= "form-group">
           <%= f.submit"Create Book",class:"btn btn-success" %>
         </div>
       <% end %>
    </div>
    </div>
 
 
 