
<div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-xm-0 mx-auto">
    
      
        <h2>User info</h2>
        
      <%= @user.errors.count %>件のerrorが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>

    
        <%= form_with model: @user do |f| %>
        
         <div class ="form-group">
          <label for="user_name">Name</label><br>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前",:class => "form-control"%><br>
         </div>
         
         <div class = "form-group">
          <label for="user_image">Image</label><br>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
         </div>
         
         <div class = "form-group-lg">
          <label for="user_introduction">Introduction</label><br>
            <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction",placeholder:"自己紹介",:class => "form-control" %>
         </div>
         
         <div class = "form-group mt-3">
            <%= f.submit "Update User",class:"btn btn-secondary" %>
         </div>    
        <% end %>
        
</div>