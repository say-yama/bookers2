
  <%= render"books/new",book:@book,user:@user %>


  <div class = "col-md-8 offset-md-1">
   <h2>Users</h2>
    <table class ="table">
      <thead>
       <tr>
        <th style="width: 35%">image</th>
        <th style="width: 44%">name</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <p><%= image_tag user.get_profile_image(80,80) %></p>
          </td>
          <td>
            <p><%= user.name %></p>
          </td>
          <td>
            <p> 
             <span>
               <%= link_to "Show",user_path(user.id) %>
             </span> 
            </p>
          </td>
        </tr>
         <% end %>
      </tbody>  
    </table>
  </div>

